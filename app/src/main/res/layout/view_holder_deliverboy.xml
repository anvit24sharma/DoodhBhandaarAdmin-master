<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="120sp"
              android:layout_marginBottom="5sp"
              android:orientation="horizontal"
              android:padding="10dp">

    <ImageView
        android:id="@+id/deliveryboy_image"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:src="@color/colorAccent"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:layout_marginStart="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/deliveryboy_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"/>

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_stats"
                android:layout_weight="1"
                android:id="@+id/deliveryboyStats"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-4sp"
                android:layout_weight="1"
                android:paddingStart="1sp"
                android:paddingTop="3sp"
                android:paddingEnd="3sp"
                android:paddingRight="3sp"
                android:paddingBottom="3sp"
                app:srcCompat="@drawable/ic_call_black_24dp"/>

            <TextView
                android:id="@+id/deliveryboy_phonenumber"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="deliveryboy Number"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="-4sp"
                android:layout_weight="1"
                android:paddingStart="10sp"
                android:paddingEnd="10sp"
                android:paddingRight="10sp"
                android:paddingBottom="8sp"
                app:srcCompat="@drawable/ic_location_on_black_24dp"/>

            <TextView
                android:id="@+id/deliveryboy_address"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="Address"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>